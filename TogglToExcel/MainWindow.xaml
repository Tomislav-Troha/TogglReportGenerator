<Window x:Class="TogglToExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toggl Exporter" Height="350" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Icon="appicon.ico">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- API Token -->
            <RowDefinition Height="Auto"/>
            <!-- Workspace ID -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Od datum -->
            <RowDefinition Height="Auto"/>
            <!-- Do datum -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
            <RowDefinition Height="*"/>
            <!-- Status -->
        </Grid.RowDefinitions>

        <!-- API Token -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="API Token:" Width="80"/>

            <!-- Hidden field -->
            <PasswordBox x:Name="pwdApiToken" Width="200" Visibility="Visible" PasswordChanged="PwdApiToken_PasswordChanged"/>

            <!-- Visible field -->
            <TextBox x:Name="txtApiTokenVisible" Width="200" Visibility="Collapsed" TextChanged="TxtApiTokenVisible_TextChanged"/>

            <Button x:Name="btnToggleApi" Content="👁" Width="30" Click="BtnToggleApi_Click"/>
        </StackPanel>

        <!-- Workspace ID -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="WorkspaceID:" Width="80"/>
            <TextBox x:Name="txtWorkspaceId" Width="250"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Email:" Width="80"/>
            <TextBox x:Name="txtEmail" Width="250"/>
        </StackPanel>

        <!-- Datum Od -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Od:" Width="80"/>
            <DatePicker x:Name="dpFrom"/>
        </StackPanel>

        <!-- Datum Do -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Do:" Width="80"/>
            <DatePicker x:Name="dpTo"/>
        </StackPanel>

        <!-- Export Button -->
        <Button Grid.Row="5" Margin="15" Content="Exportaj" Width="100" Click="Export_Click"/>

        <!-- Status -->
        <TextBlock Grid.Row="6"
           x:Name="txtStatus"
           Margin="0 20 0 0"
           HorizontalAlignment="Center"
           TextWrapping="Wrap"
           Cursor="Hand"
           TextDecorations="Underline"
           MouseLeftButtonUp="txtStatus_MouseLeftButtonUp"
           ToolTip="Klikni za otvaranje mape" />
    </Grid>
</Window>
